<section>
	<h2>Add a site to the share panel</h2>

	<div class="wb-share" data-wb-share='{"pnlId": "pnl7", "sites": {"demosite": {"name": "Demo site", "url": "http://www.demosite.com/?to=&amp;subject={t}&amp;body={u}%0A{d}"}}}'></div>

	<details>
		<summary>View code</summary>
		<section>
			<h3>HTML</h3>
			<pre class="wb-prettify"><code>&lt;div class="wb-share" data-wb-share='{"pnlId": "pnl7", "sites": "demosite": {"name": "Demo site", "url": "http://www.demosite.com/?to=&amp;subject={t}&amp;body={u}%0A{d}"}}'&gt;&lt;/div&gt;</code></pre>
		</section>
		<section>
			<h3>CSS</h3>
			<pre class="wb-prettify"><code>.wb-share .demosite:before {
	background: url("demosite.png") no-repeat;
}</code></pre>
		</section>
	</details>
