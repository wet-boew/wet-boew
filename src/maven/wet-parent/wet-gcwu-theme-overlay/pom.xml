<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- NOTE:  The v3.0.3 git repository did not yet include the POM files to build the WAR overlays.  If for some reason you want to rebuild the overlays from the 'v3.03release' tag, place
	the Maven POM files in the src/maven folder.  You should have a structure like this:
		src/maven/wet-parent/
		src/maven/wet-parent/wet-clf2-theme-overlay/
		src/maven/wet-parent/wet-gcwu-intranet-theme-overlay/
		src/maven/wet-parent/wet-gcwu-theme-overlay/
		
		And of course, in each over the overlay folders the standard Maven layout should be created.
	-->

	<parent>
		<artifactId>wet-parent</artifactId>
		<groupId>ca.gc.tbs-sct.wet-boew</groupId>
		<version>3.0.3-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<artifactId>wet-gcwu-theme-overlay</artifactId>
	<packaging>war</packaging>
	
	<build>
		<!-- Configure specifics of this overlay -->
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<configuration>
						<webResources>
							<resource>
								<directory>../../../../dist/js</directory>
								<targetPath>js</targetPath>
							</resource>
							<resource>
								<directory>../../../../dist/grids</directory>
								<targetPath>grids</targetPath>
							</resource>
							<resource>
								<directory>../../../../dist/theme-gcwu-fegc</directory>
								<targetPath>theme-gcwu-fegc</targetPath>
							</resource>
						</webResources>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>

		<!-- Tell Maven to call the maven-war-plugin -->
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
	
	<name>Web Experience Toolkit - GCWU theme overlay</name>
	
	<description>
	Web Experience Toolkit (WET) includes ready-made tools and solutions for building and maintaining innovative websites that 
	are accessible, usable, and interoperable. These tools and solutions are open source software and free for use by departments 
	and external Web communities.
	
	This module is a WAR overlay providing the files needed to implement the WET GC Web Usability (GCWU) theme.  Please see the README.txt file inside the WAR file for details on usage.
	</description>
</project>