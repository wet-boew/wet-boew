---
<table id="components" class="wb-tables table table-striped table-hover" data-wb-tables='{"columnDefs": [ { "visible": false, "targets": [ 3 ] } ], "lengthMenu": [[10, 25, -1], [10, 25, "Toutes les"]], "pageLength": -1 }'>
	<thead>
		<tr>
			<th>Nom</th>
			<th>Catégorie</th>
			<th>Description</th>
			<th>Mots clés</th>
		</tr>
	</thead>
	<tbody>
		{{#withSort pages "data.title"}}
			{{#is data.language "fr"}}
				{{#if data.category}}
					<tr>
						<td><a href="{{relativeLink}}{{#if data.querystring}}?{{data.querystring}}{{/if}}">{{data.title}}</a></td>
						<td><a href="../docs/ref/{{#is data.category "Plugiciels"}}plugins{{/is}}{{#is data.category "Correctifs"}}polyfills{{/is}}{{#is data.category "Autre"}}other{{/is}}-fr.html">{{data.category}}</a></td>
						<td>{{data.description}}</td>
						<td>{{data.tag}}</td>
					</tr>
				{{/if}}
			{{/is}}
		{{/withSort}}
		{{#withSort themes "title"}}
			<tr>
				<td><a href="{{href}}">{{title}}</a></td>
				<td><a href="../docs/ref/themesstyle-fr.html">Thèmes et style</a></td>
				<td>{{{description}}}</td>
				<td>{{tag}}</td>
			</tr>
		{{/withSort}}
		{{#withSort variants "title"}}
			<tr>
				<td><a href="{{href}}">{{title}}</a></td>
				<td><a href="../docs/ref/variants-fr.html">Variants</a></td>
				<td>{{{description}}}</td>
				<td>{{tag}}</td>
			</tr>
		{{/withSort}}
	</tbody>
</table>
