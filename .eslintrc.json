{
  "extends": [
    "eslint:recommended",
    "jquery"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "globals": {
    "wb": true,
    "Modernizr": true,
    "yepnope": true,
    "JSON": true
  },
  "rules": {
    "indent": ["error", "tab", { "outerIIFEBody": 0 }],
    "eqeqeq": [2, "allow-null"],
    "no-eq-null": 2,
    "no-unused-expressions": [2, { "allowTernary": true }],
    "wrap-iife": [
      2,
      "any"
    ],
    "no-unused-vars": [2, { "varsIgnorePattern": "wet_boew_"}],
    "camelcase": 0,
    "max-len": [
      2,
      500
    ],
    "no-irregular-whitespace": 2,
    "no-nested-ternary": 0,
    "linebreak-style": 0
  },
  "overrides": [
    {
      "files":[
        "**/test.js"
      ],
      "globals": {
        "sinon": true,
        "expect": true
      },
      "env": {
        "mocha": true
      }
    }
  ]
}
